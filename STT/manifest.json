{
  "manifest_version": 3,
  "name": "Speech to Text",
  "description": "Continuously transcribes spoken words into text fields.",
  "version": "1.1",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Speech to Text Toggle",
    "default_icon": "icon.png"
  }
}

